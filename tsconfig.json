{
  "compilerOptions": {
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "build",
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*.ts", "e2e/**/*.ts", "*.js"],
  "exclude": ["node_modules", "src/**/bazel-*"]
}
